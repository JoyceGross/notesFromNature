.transcriber.sernac {

.bar {
  display:none;

  top: 100px;
  left: 100px;
  width: 100px;
  height: 40px;

  width   = 520px;
  height  = 52px;
  pTop    = 11px;
  pRight  = 11px;
  pBottom = 11px;
  pLeft   = 10px;

  position:absolute;
  width: width;
  height: height;
  bottom: 0;

  background: #333;
  background: rgba(0, 0, 0, 0.7);

  border:1px solid black;
  padding: pTop pRight pBottom pLeft;
  height: height - pTop - pBottom;

  border-radius(8px);
  box-shadow(rgba(0,0,0,0.4) 0 0 5px 3px);

  z-index:100;
}

  .photos { margin: auto; text-align: center; z-index: 10; }
  .photos img {
    display: none;
    margin: auto;

    /*top: 0; left: 0;*/
    /*position:absolute;*/

    box-shadow(rgba(0,0,0,0.7) 0 0 15px 13px);
  }



  background: url('../images/transcribers/bg-transcriber.png');
  position:absolute;
  top: 0; bottom: 0; right: 0; left: 0;

  overflow:hidden;

  .backdrop {
    display:none;

    background-color: #000000;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: .5;
    //filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=50);

    z-index: 1000;
  }

  .loader {
    position:absolute;
    z-index: 2000;

    pTop = 11px;
    pRight = 11px;
    pBottom = 11px;
    pLeft = 10px;

    top:50%;
    left:50%;
    width:40px;
    height:40px;
    margin:-30px 0 0 -30px;

    .spinner { top: 20px; }


    .spinner { margin: auto; }

    background: #333;
    background: rgba(0, 0, 0, 0.7);

    border:1px solid black;
    padding: pTop pRight pBottom pLeft;

    border-radius(8px);
    box-shadow(rgba(0,0,0,0.4) 0 0 5px 3px);
  }

  .photos img {
    display:block;

    // Disables selection
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-user-drag: none;

    cursor: crosshair;
  }

  .highlight {
    display:none;

    position:absolute;
    background:rgba(255,103,1, .15);
    border:1px solid #FF6701;

    z-index: 1000;

    .close {
      position:absolute;
      width: 18px; height: 18px;
      top: -10px; right: -10px;
      background:url(../images/transcribers/close.png) no-repeat;

    }
  }

  .selection {
    position:absolute;
    visibility:hidden;
    background:rgba(255,103,1, .15);
    border:1px solid #FF6701;

    cursor: nwse-resize;
    z-index: 1000;
  }

  .helper {

    z-index: 1001;

    font: 11px "Open Sans";
    color: #fff;

    .title {
      text-transform: uppercase;
      opacity: .8;
    }
  }

  .launcher {

    z-index: 1001;

    .button { float: right; }

    span {
      position:relative;
      top: 5px;

      font: 13px "Open Sans";
      color: white;
    }

  }

  .sernac-widget {

    z-index: 1001;

    .right {

      position:absolute;

      right: 10px;

      .skip {
        position:relative;
        float:left;
        top: 10px;
        margin: 0 15px 0 0;

        color: white;

        font: 12px "Helvetica", Arial;
        line-height: 13px;
        border-bottom: 1px solid #fff;
        text-decoration:none;

        &:hover {
          border-bottom: 1px dashed #fff;
        }
      }

      .step {
        position:relative;
        float:left;
        top: 10px;

        color: white;

        font: 12px "Helvetica", Arial;
        line-height: 13px;
        text-transform: uppercase;
      }

      .button.finish {
        position:relative;
        float: left;
        margin: 0 0 0 10px;

        background:#FF7C09;
        font-size: 11px;
      }
    }

    .left {

      position:absolute;
      left: 10px;

      .input_field {

        float:left;

        position:relative;
        background:#fff;
        width: 180px;
        height: 31px;

        border-radius(3px);

        &.date {
          background:none;
          width: 405px;

          .button.ok { float:right; }

          .date_field {
            background:#fff;
            height: 31px;
            border-radius(3px);
            float:left;
            margin: 0 7px 0 0;
          }

          input.day   { width: 80px; }
          input.month { width: 120px; }
          input.year  { width: 90px; }
        }


        input[type="text"] {
          border: none;
          outline: none;
          color: #666;
          vertical-align: top;
          font: bold 11px "Helvetica",Arial;
          line-height: 13px!important;
          text-transform: uppercase;
          height: 13px;
          margin: 0 5px 0 0;
          padding: 9px 8px 9px;
          background:none;
        }

        .button.ok {
          position:absolute;
          top: 2px;
          right: 2px;

          width: 20px; height: 19px;
          padding: 4px;
          border:none;
          font-weight:700;

        }
      }
    }
  }

  .magnifier {

    position:absolute;

    background:url('../images/transcribers/bg-transcriber.png');
    overflow:hidden;

    box-shadow(rgba(0,0,0,0.4) 0 0 5px 3px);

    z-index: 1001;

    &.hollow {
      background:rgba(255,103,1, .15);

      border:1px solid #FF6701;
      cursor: pointer;

      box-shadow(none);
      @include transition-property(background-color);
      @include transition-duration(500ms);

      &:hover {
        background:rgba(255,103,1, .30);
      }
    }

    img {

      position:absolute;
      transform: scale(2);
      transform-origin: 0 0;

      -webkit-transform: scale(2);
      -webkit-transform-origin: 0 0;

      -o-transform: scale(2);
      -o-transform-origin: 0 0;

      -moz-transform: scale(2);
      -moz-transform-origin: 0 0;
    }
  }
}

.button {
  display:inline-block;
  vertical-align:top;
  padding:6px 13px 7px;
  border:1px solid black;
  border-radius(3px);

  font: 13px "Open Sans";

  line-height:18px;

  color:white;
  background:#669933;

  text-decoration:none;
  text-transform:uppercase;
  font-weight:100;

  &:hover,&:active {
    outline:none;
    background:#6EB422;
  }

  &:active {
    padding:7px 13px 6px;
    background:#6EB422;
  }

  &.disabled, &.disabled:active {
    opacity:0.5;
    padding:6px 13px 7px;
    background:#669933;

    &:hover {
      background:#669933;
    }
  }
}


.ui-resizable-handle {
position: absolute;
display: block
}

.ui-resizable-disabled .ui-resizable-handle,.ui-resizable-autohide .ui-resizable-handle {
display: none
}
.ui-resizable-n {
cursor: n-resize;
width: 100%;
height: 7px;
position: absolute;
top: -5px;
left: 0
}
.ui-resizable-s {
cursor: s-resize;
width: 100%;
height: 7px;
position: absolute;
bottom: -5px;
left: 0
}
.ui-resizable-e {
cursor: e-resize;
width: 7px;
height: 100%;
position: absolute;
top: 0;
right: -5px
}
.ui-resizable-w {
cursor: w-resize;
width: 7px;
height: 100%;
position: absolute;
top: 0;
left: -5px
}
.ui-resizable-se {
cursor: se-resize;
width: 12px;
height: 12px;
position: absolute;
right: 1px;
bottom: 1px
}
.ui-resizable-sw {
cursor: sw-resize;
width: 9px;
height: 9px;
position: absolute;
bottom: -5px;
left: -5px
}
.ui-resizable-nw {
cursor: nw-resize;
width: 9px;
height: 9px;
position: absolute;
top: -5px;
left: -5px
}
.ui-resizable-ne {
cursor: ne-resize;
width: 9px;
height: 9px;
position: absolute;
top: -5px;
bottom: -5px
}

