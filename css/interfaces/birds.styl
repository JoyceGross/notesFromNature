.birds-interface
  @extends #interface

  @import "menu"

  .data-entry
    background: rgba(#333, 0.6)
    bottom: 0
    box-sizing: border-box
    color: #d3d3d3
    height: 200px
    padding: 25px
    position: fixed
    width: 100%
    z-index: 1000

    .entry
      margin-right: 200px
      width: 100%

    .actions
      border-left: 1px solid #999
      box-sizing: border-box
      padding: 15px
      position: absolute
      right: 0
      top: 0
      width: 200px

      ul
        @extends #semantic-list

        li
          cursor: pointer
          text-decoration: underline
          &:hover
            color: #fff
            text-decoration: none


  .boxes
    position: relative

    img
      @extends #no-select

  .box
    background: rgba(#f00, 0.13)
    border: 1px solid transparent
    position: absolute !important

    &.resizable,
    &.selected
      background: rgba(#f00, 0.35)
      border-color: #fff

    &.red
      background: rgba(#f00, 0.25)
    &.green
      background: rgba(#0f0, 0.25)
    &.blue
      background: rgba(#00f, 0.25)