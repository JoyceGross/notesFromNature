.birds-interface
  @extends #interface

  @import "menu"

  a
    &.full
      height: 100%
      left: 0
      position: absolute
      top: 0
      width: 100%

  .data-entry
    background: rgba(#000, 0.8)
    border: 1px solid #000
    border-radius: 8px
    bottom: 33px
    box-shadow: 0 0 15px 2px rgba(#000, 0.4)
    box-sizing: border-box
    color: #d3d3d3
    height: 60px
    padding: 14px 15px 15px
    position: fixed !important
    width: 700px
    z-index: 1000
    left: 50%
    left: calc(50% \- @width / 2)
    left: -webkit-calc(50% \- @width / 2)

    > *
      display: inline-block

    .entry
      float: left

      div
        background: #fff
        border-radius: 3px
        display: inline-block
        height: 30px

        &.disabled
          background: #ccc

          button
            background: darken(#693, 20%)
            border: 2px solid #ccc

          input
            background: #ccc

        > *
          box-sizing: border-box
          height: 30px
          vertical-align: top

        input
          appearance: none
          border: 0
          border-radius: 3px
          margin: 0
          outline: none
          padding: 3px 5px

        button
          background: #693
          border: 2px solid #fff
          border-radius: 3px
          color: #fff
          font-family: 'Open Sans', sans-serif
          font-size: 11px
          text-transform: uppercase


    .actions
      float: right

      ul
        @extends #semantic-list
        display: inline-block

        &.interface-actions
          margin: 0 0 0 20px

          li
            background: #ff7c09

            &:hover
              background: lighten(#ff7c09, 10%)

        li
          background: #693
          border-radius: 2px
          box-shadow: 0 0 8px 2px #000
          box-sizing: border-box
          color: #fff
          cursor: pointer
          display: inline-block
          font-family: 'Open Sans', sans-serif
          font-size: 11px
          height: 26px
          margin: 2px 2px 2px 12px
          padding: 2px 6px 3px
          text-transform: uppercase
          vertical-align: top

          &:hover
            background: lighten(#693, 10%)

  .boxes
    position: relative

    img
      @extends #no-select

  .box
    background: rgba(#f00, 0.13)
    border: 1px solid rgba(#fff, 0.1)
    position: absolute !important

    &.resizable,
    &.selected
      background: rgba(#f00, 0.35)
      border-color: #fff

    &.red
      background: rgba(#f00, 0.25)
    &.green
      background: rgba(#0f0, 0.25)
    &.blue
      background: rgba(#00f, 0.25)