.birds-interface
  @extends #interface
  position: absolute

  .boxes
    position: relative

    img
      @extends #no-select

  .box
    background: rgba(#006, 0.25)
    border: 1px solid transparent
    position: absolute !important

    &.resizable
      border-color: #fff

    &.red
      background: rgba(#f00, 0.25)
    &.green
      background: rgba(#0f0, 0.25)
    &.blue
      background: rgba(#00f, 0.25)